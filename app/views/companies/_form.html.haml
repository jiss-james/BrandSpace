= form_for @company do |f|
  - if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  .form-group.row
    = f.label :company_name, class: "col-xs-3 col-form-label"
    .col-xs-9
      = f.text_field :company_name, class: "form-control"
  .form-group.row
    = f.label :description, class: "col-xs-3 col-form-label"
    .col-xs-9
      = f.text_field :description, class: "form-control"
  .form-group.row
    = f.label :location, class: "col-xs-3 col-form-label"
    .col-xs-9
      = f.text_field :location, class: "form-control"
  %br/
  

  .actions
    = f.submit 'Save'
