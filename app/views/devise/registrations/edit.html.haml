%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!

  .form-group.row
    = f.label :first_name, class: "col-xs-3 col-form-label"
    .col-xs-9
      = f.label :first_name, class: "form-control"



 
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  %br/
  .field
    - User.genders.keys.each do |gender|
      = f.radio_button :gender, gender
      = f.label gender.to_sym
  .field
    %br/
    = f.label :date_of_birth
    %br/
    = f.date_select :date_of_birth, start_year: Date.today.year - 18, end_year: Date.today.year - 100
  .field
    = f.label :profession
    %br/
    = f.text_field :profession
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :work_experience
    %br/
    = f.text_area :work_experience
  .field
    = f.label :current_location
    %br/
    = f.text_field :current_location
  .field
    %br/
    = f.label :vehicle
    = f.check_box :vehicle
    %br/
  .field
    = f.label :available_for_work
    = f.check_box :available_for_work
    %br/
    %br/
  .field
    = f.label :email
    %br/
    = f.email_field :email
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = f.label :password
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password, autocomplete: "off"
    - if @minimum_password_length
      %br/
      %em
        = @minimum_password_length
        characters minimum
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password, autocomplete: "off"
  .actions
    %br/
    = f.submit "Update"
    %br/
    %br/
%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
= link_to "Back", :back
